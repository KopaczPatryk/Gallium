<UserControl x:Class="Gallium.UserControls.FaceIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gallium.UserControls"
             mc:Ignorable="d" >

    <Grid MouseEnter="Grid_MouseEnter">
        <Image Name="FaceImage" Source="../Assets/morda.jpg" Width="60" Height="60"/>
        <Button Name="Action" Click="Action_Click" Width="40" Height="40" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent"/>
    </Grid>
</UserControl>
