<UserControl x:Class="Gallium.UserControls.UserSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gallium.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="25">
            <ComboBox x:Name="ComboBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="25" StaysOpenOnEdit="True" Margin="0,0,25,0"/>
            <TextBox x:Name="TextBox_Search" ToolTip="Szukaj" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,25,0" FontSize="17"/>
            <Button x:Name="Button_Clear" Content="X" HorizontalAlignment="Right" Background="Transparent" Width="20"/>
        </Grid>
    </Grid>
</UserControl>
